---
import Layout from '../layouts/Layout.astro';
import ThemeGallery from '../components/ThemeGallery.astro';
import Header from '../components/Header.astro';
---

<Layout>
  <Header />
  <main>
    <h1>IDE Themes</h1>
    <ThemeGallery />
  </main>
</Layout>

<style>
  h1 {
    margin: 1rem 0;
    font-size: 2rem;
    color: #ffffff;
    text-align: center;
  }
  
  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
</style>
